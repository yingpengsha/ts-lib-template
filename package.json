{
  "name": "ts-lib-template",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Pengsha Ying <yingfusheng@foxmail.com>",
  "description": "ðŸ˜Ž Awesome typescript library template",
  "repository": "git@github.com:yingpengsha/ts-lib-template.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "dev": "tsup --watch --sourcemap --env.NODE_ENV development",
    "build": "tsup --env.NODE_ENV production",
    "test:dev": "vitest --passWithNoTests",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint \"**/*.{js,ts}\"",
    "release": "bump --commit --push --tag && pnpm publish",
    "reset": "npx rimraf ./node_modules && pnpm install",
    "prepare": "husky install",
    "postinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.43.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "rimraf": "^5.0.1",
    "tsup": "^7.0.0",
    "typescript": "5.0",
    "vitest": "^0.32.2"
  }
}
